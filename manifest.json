{
  "manifest_version": 2,
  "name": "tabml",
  "version": "0.1.0",
  "description": "TabsOutliner-like tab management suite for Firefox",
  "icons": {
    "48": "assets/icons/icon-light.svg",
    "96": "assets/icons/icon-light.svg"
  },

  "permissions": ["tabs", "storage"],

  "browser_action": {
    "default_icon": "assets/icons/icon-light.svg",
    "default_title": "tabml"
  },
  "background": {
    "page": "pages/background.html",
    "persistent": true
  }
}
